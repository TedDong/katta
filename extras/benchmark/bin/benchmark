# the CLI to run benchmarks

bin=`dirname "$0"`
bin=`cd "$bin"; pwd`

# if no args specified, show usage
if [ $# = 0 ]; then
  echo "Usage: benchmark COMMAND"
  echo "where COMMAND is one of:"
  echo "  run                                   runs Katta benchmark on a EC2 clusters"
 # echo "  list                                 list all running Katta EC2 clusters"
 # echo "  launch-cluster <group> <num nodes>   launch a cluster of  EC2 instances - runs launch-cluster"
 # echo "  terminate-cluster  <group>           terminate all Katta EC2 instances"
 # echo "  delete-cluster <group>               delete the group information for a terminated cluster"
  exit 1
fi

# get arguments
COMMAND="$1"
shift

if [ "$COMMAND" = "run" ] ; then
  . "$bin"/run-benchmark  $*
else
  . "$bin"/cmd-katta-cluster "$COMMAND" $*
fi

