# Terminate a cluster.

if [ -z $1 ]; then
  echo "Cluster name required!"
  exit -1
fi

CLUSTER=$1

# Import variables
bin=`dirname "$0"`
bin=`cd "$bin"; pwd`
. "$bin"/benchmark-ec2-env.sh

# Finding benchmark instance
BENCHMARK_INSTANCES=`ec2-describe-instances | awk '"RESERVATION" == $1 && ("'$CLUSTER'" == $4 || "'$CLUSTER_MASTER'" == $4), "RESERVATION" == $1 && ("'$CLUSTER'" != $4 && "'$CLUSTER_MASTER'" != $4)'`
BENCHMARK_INSTANCES=`echo "$BENCHMARK_INSTANCES" | grep INSTANCE | grep running`

[ -z "$BENCHMARK_INSTANCES" ] && echo "No running instances in cluster $CLUSTER." && exit 0

echo "Running cluster instances:"
echo "$BENCHMARK_INSTANCES"

if [ -z $2 ]; then
read -p "Terminate all instances? [yes or no]: " answer
 if [ "$answer" != "yes" ]; then
   echo "scripted stoped"
   exit 1
 fi
else 
 if [ "$2" != "yes" ]; then
    exit 1
 fi
fi

ec2-terminate-instances `echo "$BENCHMARK_INSTANCES" | awk '{print $2}'`

# now also delete the group information

# Finding  clusters
CLUSTERS=`ec2-describe-instances | \
  awk '"RESERVATION" == $1 && $4 ~ /-master$/, "INSTANCE" == $1' | tr '\n' '\t' | \
  grep "$CLUSTER" | grep running | cut -f4 | rev | cut -d'-' -f2- | rev`
  
if [ -n "$CLUSTERS" ]; then
  echo "Cluster $CLUSTER has running instances. Please terminate them first."
  exit 0
fi


ec2-describe-group | egrep "[[:space:]]$CLUSTER_MASTER[[:space:]]" > /dev/null
if [ $? -eq 0 ]; then
  echo "Deleting group $CLUSTER_MASTER"
  ec2-revoke $CLUSTER_MASTER -o $CLUSTER -u $AWS_ACCOUNT_ID
fi

ec2-describe-group | egrep "[[:space:]]$CLUSTER[[:space:]]" > /dev/null
if [ $? -eq 0 ]; then
  echo "Deleting group $CLUSTER"
  ec2-revoke $CLUSTER -o $CLUSTER_MASTER -u $AWS_ACCOUNT_ID
fi

ec2-delete-group $CLUSTER_MASTER
ec2-delete-group $CLUSTER
