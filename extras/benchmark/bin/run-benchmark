# runs a benchmark


if [ -z $1 ]; then
  echo "Must specify the number of Katta nodes to start."
  exit -1
fi

if [ -z $2 ]; then
  echo "Must specify the number of test clients to start."
  exit -1
fi

NO_NODES=$1
NO_CLIENTS=$2

# Import variables
bin=`dirname "$0"`
bin=`cd "$bin"; pwd`
. "$bin"/benchmark-ec2-env.sh

CLUSTER_NAME=katta-benchmark-cluster

echo "Starting cluster."
let NO_INSTANCES=$NO_NODES+$NO_CLIENTS 

echo "========================================="
. "$bin"/launch-cluster $CLUSTER_NAME $NO_INSTANCES 
echo "========================================="


echo "Installing katta on cluster"
echo "========================================="
#. "$bin"/install-katta $CLLUSTER_NAME $NO_NODES $NO_CLIENTS 
echo "========================================="


echo ">>>>>>>>> run benchmark"
echo ">>>>>>>>> download results"

#. "$bin"/terminate-benchmark-cluster $APP_CLUSTER

#. "$bin"/terminate-benchmark-cluster $CLIENT_CLUSTER
