<assembly>
	<id>dist</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>bin</directory>
			<outputDirectory>katta-distribution/bin</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>conf</directory>
			<outputDirectory>katta-distribution/conf</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>target/site/apidocs</directory>
			<outputDirectory>katta-distribution/docs/apidocs</outputDirectory>
		</fileSet>
	</fileSets>
	<dependencySets>
		<dependencySet>
			<outputDirectory>katta-distribution/repository</outputDirectory>
			<unpack>false</unpack>
			<scope>runtime</scope>
		</dependencySet>
	</dependencySets>

</assembly>