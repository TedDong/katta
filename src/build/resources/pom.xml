<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>net.sf.katta</groupId>
	<artifactId>katta</artifactId>
	<name>katta</name>
	<packaging>jar</packaging>
	<version>0.2-SNAPSHOT</version>
	<dependencies>
		<dependency>
			<groupId>net.sf.zookeeper</groupId>
			<artifactId>zookeeper</artifactId>
			<version>2.2.0</version>
			<exclusions>
                <exclusion>
                    <groupId>com.sun.jdmkk</groupId>
                    <artifactId>jmxtools</artifactId>
                </exclusion>
            </exclusions>
		</dependency>
		<dependency>
			<groupId>org.apache.hadoop</groupId>
			<artifactId>hadoop-core</artifactId>
			<version>0.16.3</version>
		</dependency>
		<dependency>
			<groupId>org.apache.lucene</groupId>
			<artifactId>lucene-core</artifactId>
			<version>2.3.1</version>
		</dependency>
		<dependency>
			<groupId>org.jmock</groupId>
			<artifactId>jmock</artifactId>
			<version>2.4.0</version>
			<type>jar</type>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>3.8.1</version>
			<scope>test</scope>
		</dependency>
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<configuration>
				    <argLine>-ea -esa</argLine>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.5</source>
					<target>1.5</target>
					<compilerArguments>
						<encoding>UTF8</encoding>
					</compilerArguments>
				</configuration>
			</plugin>
			<plugin>
					<artifactId>maven-assembly-plugin</artifactId>
					<version>2.1</version>
					<configuration>
						<descriptors>
							<descriptor>
								src/main/assembly/job.xml
							</descriptor>
							<descriptor>
								src/main/assembly/dist.xml
							</descriptor>
						</descriptors>
						<archive>
							<manifest>
								<mainClass>
									net.sf.katta.index.IndexApplication
								</mainClass>
							</manifest>
						</archive>
					</configuration>
				</plugin>
		</plugins>
	</build>
	<repositories>
		<repository>
			<id>locallib</id>
			<name>locallib</name>
			<layout>default</layout>
			<url>file://repository</url>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</repository>
	</repositories>
</project>
