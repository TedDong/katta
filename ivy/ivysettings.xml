<ivysettings>
  <settings defaultResolver="local-resolver-chain" />
  <caches defaultCacheDir="${ivy.cache}" />
  <resolvers>
    <chain name="local-resolver-chain">
 	 <filesystem name="libraries">
        <artifact pattern="${basedir}/lib/[artifact]-[revision].[type]" />
      </filesystem>
    </chain>
  </resolvers>
</ivysettings>